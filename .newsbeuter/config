#http://www.newsbeuter.org/doc/newsbeuter.html
auto-reload yes
reload-time 30
refresh-on-startup no
user-agent "Liferea/1.4.14 (Linux; en_US.UTF8; http://liferea.sf.net/)"
error-log "~/.newsbeuter/error.log"
reload-threads 15
show-read-feeds no
show-read-articles no
browser "open -g %u"
macro i set browser "~/.dotfiles/bin/qli %u"; open ; set browser "open -g %u"

